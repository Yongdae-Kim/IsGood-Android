<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/member_info_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/name_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp">


        <com.beardedhen.androidbootstrap.BootstrapThumbnail
            android:id="@+id/member_iv"
            android:layout_width="125dp"
            android:layout_height="125dp"
            app:bootstrapSize="md"
            app:hasBorder="true"
            app:roundedCorners="true" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/member_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/member_iv"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:roundedCorners="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/belong_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/name_layout">

        <com.beardedhen.androidbootstrap.BootstrapLabel
            android:id="@+id/chat_nickname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소   속"
            app:bootstrapHeading="h6"
            app:roundedCorners="true" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/member_belong_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/chat_nickname_tv"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:roundedCorners="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/department_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/belong_layout"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/name_layout">

        <com.beardedhen.androidbootstrap.BootstrapLabel
            android:id="@+id/department_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="부   서"
            app:bootstrapHeading="h6"
            app:roundedCorners="true" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/member_department_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/department_label"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:roundedCorners="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/reviews_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/department_layout"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/name_layout">

        <com.beardedhen.androidbootstrap.BootstrapLabel
            android:id="@+id/reviews_info_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한줄평"
            app:bootstrapHeading="h6"
            app:roundedCorners="true" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/member_reviews_info_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/reviews_info_label"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:roundedCorners="true" />
    </RelativeLayout>
</RelativeLayout>